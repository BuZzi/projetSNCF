{% extends '::base.html.twig' %}

{% block body %}

    <span class="button" id="findMe">Trouve Moi</span>
    <!-- Div qui contient les géolocalisations de l'utilisateur (pas affiché à l'utilisateur) -->
    <div id="infosposition"></div>

    {% if form is defined %}
        {% if errorTxt is defined %}
            <div class="alert-box alert">
                {{ errorTxt }}
                <a href="" class="close">&times;</a>
            </div>
        {% endif %}
        <h3>Ou alors utilise le formulaire suivant pour trouver une gare</h3>

        <form action="{{ path('lpdw_search') }}" method="post" {{ form_enctype(form) }}>
            {{ form_widget(form) }}
            <input class="button" type="submit"/>
        </form>
    {% endif %}

    <!-- Si le formulaire a été soumis et des résultats ont été envoyés depuis le controlleur -->
    {% if stations is defined %}
        <h3>Stations correspondantes à votre recherche</h3>

        <dl class="vertical tabs">
            {% for station in stations %}
                <dd><a href="#">{{ station.name }}</a></dd>
            {% endfor %}
        </dl>
    {% endif %}

{% endblock %}


{% block javascripts %}
    {{ parent() }}
    {% javascripts '@LPDWClientBundle/Resources/public/js/*' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}