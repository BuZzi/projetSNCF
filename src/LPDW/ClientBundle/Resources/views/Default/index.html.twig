{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets '@LPDWClientBundle/Resources/public/css/*' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block body %}

    <!-- Google map image logo -->
    <div class="row">
        <h1 class="text-center">Where ?</h1>
        <div id="logo">
            <figure id="google-map-logo"></figure>
        </div>
        <hr />
    </div>
    <!-- End google map image logo -->

    <!-- Div qui contient les géolocalisations de l'utilisateur (à enlever après) une fois le bouton 'Trouve moi' cliqué -->
    <div class="row" id="infosposition">
        <div class="two columns"></div>
            <span class="button eight columns large" id="findMe">
                <i class="foundicon-flag"></i>
                Trouver les gares à proximité de ma position
            </span>
        <div class="two columns"></div>
    </div>

    <!-- Formulaire Recherche -->
    {% if form is defined %}

        <div class="row">
            <hr />
            <div class="two columns"></div>
            <div class="eight columns formulaire-recherche">
                <h5><i class="foundicon-search"></i>Je recherche une gare en particulier </h5>
                <form action="{{ path('lpdw_search') }}" method="post"  {{ form_enctype(form) }}>
                    {{ form_widget(form) }}
                    <div class="twelve columns">
                        <input class="button" type="submit" value="Rechercher"/>
                    </div>
                </form>
            </div>
            <div class="two columns"></div>
        </div>

    {% endif %}
    <!-- End Formulaire Recherche -->

    <div class="row search-results">

        {% if errorTxt is defined %}
            <!-- Si une erreur est survenue lors de la recherche (formulaire soumis) -->
            <div data-alert class="alert-box alert twelve columns">
                {{ errorTxt }}
            </div>
        {% endif %}

        {% if stations is defined %}

            <!-- Si le formulaire a été soumis et des résultats ont été envoyés depuis le controlleur -->
            <h4>Gares correspondantes à votre recherche</h4>
            <dl class="vertical tabs twelve columns">
                {% for station in stations %}
                    <dd><a href="{{ path('lpdw_categories', {'name': station.name, 'latitude': station.latitude, 'longitude': station.longitude}) }}">{{ station.name }}</a></dd>
                {% endfor %}
            </dl>

        {% endif %}

    </div>

{% endblock %}


{% block javascripts %}
    {{ parent() }}
    {% javascripts '@LPDWClientBundle/Resources/public/js/*' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        <script type="text/javascript">
            // stocke dans une variable le lien vers le gif de chargement (utilisée par le JS lors de l'appel ajax ensuite)
            var loadingImg = "{{ asset('Resources/public/images/loading.gif') }}";
        </script>
    {% endjavascripts %}
{% endblock %}