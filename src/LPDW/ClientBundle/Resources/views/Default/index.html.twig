{% extends '::base.html.twig' %}

{% block body %}

    <a class="button" id="findMe" href="#">Trouve Moi</a>
    <!-- Div qui contient les géolocalisations de l'utilisateur (pas affiché à l'utilisateur) -->
    <div id="infosposition"></div>

    <h3>Ou alors utilise le formulaire suivant pour trouver une gare</h3>

    <form action="#" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}
        <input class="button" type="submit"/>
    </form>

{% endblock %}


{% block javascripts %}
    {{ parent() }}
    {% javascripts '@LPDWClientBundle/Resources/public/js/*' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}